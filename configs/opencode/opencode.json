{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "~/.ai-tools/best-practices.md",
    "~/.ai-tools/MEMORY.md"
  ],
  "theme": "kanagawa",
  "default_agent": "plan",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "qmd": {
      "type": "local",
      "command": [
        "qmd",
        "mcp"
      ],
      "enabled": true
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "git push": "ask"
        }
      }
    }
  },
  "plugin": [
    "@plannotator/opencode@latest"
  ]
}
